{
  "openapi": "3.0.1",
  "info": {
    "title": "Hotel 行李管理系统 API",
    "description": "酒店行李管理系统，提供JWT双令牌认证、RBAC权限管理、Redis缓存、行李管理和统计功能。支持员工注册、登录、基于角色的权限控制、行李增删改查和统计功能。系统使用Redis多层缓存架构提升性能，包含令牌桶限流和分布式锁机制。",
    "version": "2.5.1",
    "contact": {
      "name": "Hotel Management System",
      "email": "support@hotel.com"
    }
  },
  "servers": [
    {
      "url": "http://localhost:8080",
      "description": "开发服务器"
    }
  ],
  "tags": [
    {
      "name": "认证管理",
      "description": "员工认证相关接口"
    },
    {
      "name": "权限管理",
      "description": "权限管理相关接口"
    },
    {
      "name": "行李管理",
      "description": "行李操作相关接口"
    },
    {
      "name": "行李查询",
      "description": "行李查询相关接口"
    },
    {
      "name": "统计功能",
      "description": "统计分析相关接口"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "description": "JWT访问令牌"
      }
    },
    "schemas": {
      "SuccessResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
            "example": true
          },
          "message": {
            "type": "string",
            "example": "操作成功"
          }
        }
      },
      "ErrorResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
            "example": false
          },
          "message": {
            "type": "string",
            "example": "操作失败"
          }
        }
      },
      "Employee": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "description": "员工ID",
            "example": 1
          },
          "name": {
            "type": "string",
            "description": "员工姓名",
            "example": "张三"
          },
          "user": {
            "type": "string",
            "description": "用户名",
            "example": "zhangsan"
          },
          "role_id": {
            "type": "integer",
            "description": "角色ID",
            "example": 2
          }
        }
      },
      "Luggage": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "description": "行李ID",
            "example": 1
          },
          "guest_id": {
            "type": "integer",
            "description": "客户ID",
            "example": 1
          },
          "guest_name": {
            "type": "string",
            "description": "客户姓名",
            "example": "张三"
          },
          "tag": {
            "type": "string",
            "description": "行李标签",
            "example": "红色行李箱"
          },
          "weight": {
            "type": "number",
            "description": "行李重量",
            "example": 15.5
          },
          "status": {
            "type": "string",
            "description": "行李状态",
            "enum": ["寄存中", "已取出", "丢失"],
            "example": "寄存中"
          },
          "location": {
            "type": "string",
            "description": "存放位置",
            "example": "前台"
          }
        }
      },
      "Permission": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "description": "权限ID",
            "example": 1
          },
          "name": {
            "type": "string",
            "description": "权限名称",
            "example": "查看行李"
          }
        }
      },
      "TokenResponse": {
        "type": "object",
        "properties": {
          "access_token": {
            "type": "string",
            "description": "访问令牌（15分钟有效）",
            "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
          },
          "refresh_token": {
            "type": "string",
            "description": "刷新令牌（7天有效）",
            "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
          },
          "expires_in": {
            "type": "integer",
            "description": "Access Token 过期时间（秒）",
            "example": 900
          },
          "token_type": {
            "type": "string",
            "description": "令牌类型",
            "example": "Bearer"
          }
        }
      }
    }
  },
  "paths": {
    "/employee/register": {
      "post": {
        "summary": "员工注册",
        "description": "注册新员工账号，包含用户名、密码和姓名。系统会检查用户名是否已存在并自动分配员工角色。",
        "tags": ["认证管理"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["user", "password", "name"],
                "properties": {
                  "user": {
                    "type": "string",
                    "description": "用户名（唯一）",
                    "minLength": 3,
                    "maxLength": 50,
                    "example": "zhangsan"
                  },
                  "password": {
                    "type": "string",
                    "description": "密码",
                    "minLength": 6,
                    "maxLength": 100,
                    "example": "123456"
                  },
                  "name": {
                    "type": "string",
                    "description": "员工真实姓名",
                    "minLength": 2,
                    "maxLength": 50,
                    "example": "张三"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "注册成功",
            "content": {
              "application/json": {
                "schema": {
                  "allOf": [
                    {"$ref": "#/components/schemas/SuccessResponse"},
                    {
                      "type": "object",
                      "properties": {
                        "data": {
                          "$ref": "#/components/schemas/Employee"
                        }
                      }
                    }
                  ]
                },
                "example": {
                  "success": true,
                  "message": "注册成功",
                  "data": {
                    "id": 1,
                    "name": "张三",
                    "user": "zhangsan",
                    "role_id": 2
                  }
                }
              }
            }
          },
          "400": {
            "description": "注册失败",
            "content": {
              "application/json": {
                "schema": {"$ref": "#/components/schemas/ErrorResponse"},
                "examples": {
                  "用户名重复": {
                    "value": {
                      "success": false,
                      "message": "用户名已存在"
                    }
                  },
                  "参数错误": {
                    "value": {
                      "success": false,
                      "message": "请求数据格式错误"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/employee/login": {
      "post": {
        "summary": "员工登录",
        "description": "员工使用用户名和密码登录，成功后返回JWT双令牌（Access Token和Refresh Token）。",
        "tags": ["认证管理"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["user", "password"],
                "properties": {
                  "user": {
                    "type": "string",
                    "description": "用户名",
                    "example": "zhangsan"
                  },
                  "password": {
                    "type": "string",
                    "description": "密码",
                    "example": "123456"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "登录成功",
            "content": {
              "application/json": {
                "schema": {
                  "allOf": [
                    {"$ref": "#/components/schemas/SuccessResponse"},
                    {
                      "type": "object",
                      "properties": {
                        "data": {
                          "$ref": "#/components/schemas/TokenResponse"
                        }
                      }
                    }
                  ]
                }
              }
            }
          },
          "400": {
            "description": "登录失败",
            "content": {
              "application/json": {
                "schema": {"$ref": "#/components/schemas/ErrorResponse"},
                "examples": {
                  "用户不存在": {
                    "value": {
                      "success": false,
                      "message": "没有这名员工"
                    }
                  },
                  "登录失败": {
                    "value": {
                      "success": false,
                      "message": "登录失败"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/employee/logout": {
      "post": {
        "summary": "员工退出",
        "description": "员工退出登录，系统会删除对应的刷新令牌，使令牌失效。",
        "tags": ["认证管理"],
        "security": [{"bearerAuth": []}],
        "responses": {
          "200": {
            "description": "退出成功",
            "content": {
              "application/json": {
                "schema": {"$ref": "#/components/schemas/SuccessResponse"},
                "example": {
                  "success": true,
                  "message": "退出成功"
                }
              }
            }
          },
          "400": {
            "description": "退出失败",
            "content": {
              "application/json": {
                "schema": {"$ref": "#/components/schemas/ErrorResponse"},
                "example": {
                  "success": false,
                  "message": "token无效"
                }
              }
            }
          }
        }
      }
    },
    "/employee/refresh": {
      "post": {
        "summary": "刷新令牌",
        "description": "使用刷新令牌获取新的访问令牌，当访问令牌过期时使用此接口。",
        "tags": ["认证管理"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["refresh_token"],
                "properties": {
                  "refresh_token": {
                    "type": "string",
                    "description": "刷新令牌",
                    "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "令牌刷新成功",
            "content": {
              "application/json": {
                "schema": {
                  "allOf": [
                    {"$ref": "#/components/schemas/SuccessResponse"},
                    {
                      "type": "object",
                      "properties": {
                        "data": {
                          "$ref": "#/components/schemas/TokenResponse"
                        }
                      }
                    }
                  ]
                }
              }
            }
          },
          "400": {
            "description": "刷新令牌无效",
            "content": {
              "application/json": {
                "schema": {"$ref": "#/components/schemas/ErrorResponse"},
                "example": {
                  "success": false,
                  "message": "token无效"
                }
              }
            }
          }
        }
      }
    },
    "/tool/add_permission": {
      "post": {
        "summary": "添加权限",
        "description": "添加新的系统权限，用于权限管理和角色分配。通常由系统管理员使用。",
        "tags": ["权限管理"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["name"],
                "properties": {
                  "name": {
                    "type": "string",
                    "description": "权限名称",
                    "minLength": 2,
                    "maxLength": 50,
                    "example": "查看行李"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "权限添加成功",
            "content": {
              "application/json": {
                "schema": {
                  "allOf": [
                    {"$ref": "#/components/schemas/SuccessResponse"},
                    {
                      "type": "object",
                      "properties": {
                        "data": {
                          "$ref": "#/components/schemas/Permission"
                        }
                      }
                    }
                  ]
                },
                "example": {
                  "success": true,
                  "message": "权限添加成功",
                  "data": {
                    "id": 1,
                    "name": "查看行李"
                  }
                }
              }
            }
          },
          "400": {
            "description": "添加失败",
            "content": {
              "application/json": {
                "schema": {
                  "allOf": [
                    {"$ref": "#/components/schemas/ErrorResponse"},
                    {
                      "type": "object",
                      "properties": {
                        "data": {
                          "type": "string",
                          "description": "详细错误信息"
                        }
                      }
                    }
                  ]
                },
                "example": {
                  "success": false,
                  "message": "请求数据格式错误",
                  "data": "Key: 'Permission.Name' Error:Field validation for 'Name' failed on the 'required' tag"
                }
              }
            }
          }
        }
      }
    },
    "/employee/add/luggage": {
      "post": {
        "summary": "添加行李",
        "description": "为客户添加新的行李记录。如果客户不存在，系统会自动创建客户记录。需要'增加行李'权限。",
        "tags": ["行李管理"],
        "security": [{"bearerAuth": []}],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["guest_name", "tag"],
                "properties": {
                  "guest_name": {
                    "type": "string",
                    "description": "客户姓名（系统自动创建客户记录）",
                    "example": "张三"
                  },
                  "tag": {
                    "type": "string",
                    "description": "行李标签（必填）",
                    "example": "红色行李箱"
                  },
                  "weight": {
                    "type": "number",
                    "description": "行李重量（可选，单位：kg）",
                    "example": 15.5
                  },
                  "status": {
                    "type": "string",
                    "description": "行李状态（可选，默认：寄存中）",
                    "enum": ["寄存中", "已取出", "丢失"],
                    "example": "寄存中"
                  },
                  "location": {
                    "type": "string",
                    "description": "行李位置（可选，默认：前台）",
                    "example": "前台"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "添加成功",
            "content": {
              "application/json": {
                "schema": {
                  "allOf": [
                    {"$ref": "#/components/schemas/SuccessResponse"},
                    {
                      "type": "object",
                      "properties": {
                        "data": {
                          "$ref": "#/components/schemas/Luggage"
                        }
                      }
                    }
                  ]
                }
              }
            }
          },
          "403": {
            "description": "权限不足",
            "content": {
              "application/json": {
                "schema": {"$ref": "#/components/schemas/ErrorResponse"},
                "example": {
                  "success": false,
                  "message": "没有权限"
                }
              }
            }
          },
          "429": {
            "description": "请求过于频繁",
            "content": {
              "application/json": {
                "schema": {"$ref": "#/components/schemas/ErrorResponse"},
                "example": {
                  "success": false,
                  "message": "请求过于频繁，请稍后再试"
                }
              }
            }
          }
        }
      }
    },
    "/employee/delete/luggage": {
      "delete": {
        "summary": "删除行李",
        "description": "删除指定行李（软删除）。只能删除状态为'寄存中'的行李，删除前会先将状态更新为'已取出'，然后进行软删除。需要'删除行李'权限。",
        "tags": ["行李管理"],
        "security": [{"bearerAuth": []}],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["id"],
                "properties": {
                  "id": {
                    "type": "integer",
                    "description": "行李ID",
                    "minimum": 1,
                    "example": 1
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "删除成功",
            "content": {
              "application/json": {
                "schema": {"$ref": "#/components/schemas/SuccessResponse"},
                "example": {
                  "success": true,
                  "message": "行李删除成功"
                }
              }
            }
          },
          "403": {
            "description": "权限不足",
            "content": {
              "application/json": {
                "schema": {"$ref": "#/components/schemas/ErrorResponse"},
                "example": {
                  "success": false,
                  "message": "没有权限"
                }
              }
            }
          },
          "404": {
            "description": "行李记录不存在",
            "content": {
              "application/json": {
                "schema": {"$ref": "#/components/schemas/ErrorResponse"},
                "example": {
                  "success": false,
                  "message": "行李记录不存在"
                }
              }
            }
          }
        }
      }
    },
    "/employee/update/update": {
      "put": {
        "summary": "更新行李",
        "description": "更新行李信息，需要提供行李ID。系统会验证记录是否存在，然后更新指定的字段。需要'更新行李'权限。",
        "tags": ["行李管理"],
        "security": [{"bearerAuth": []}],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["id"],
                "properties": {
                  "id": {
                    "type": "integer",
                    "description": "行李ID（必填）",
                    "minimum": 1,
                    "example": 1
                  },
                  "status": {
                    "type": "string",
                    "description": "行李状态（可选）",
                    "enum": ["寄存中", "已取出", "丢失"],
                    "example": "已取出"
                  },
                  "location": {
                    "type": "string",
                    "description": "行李位置（可选）",
                    "example": "已取出"
                  },
                  "tag": {
                    "type": "string",
                    "description": "行李标签（可选）",
                    "example": "新标签"
                  },
                  "weight": {
                    "type": "number",
                    "description": "行李重量（可选）",
                    "minimum": 0,
                    "example": 12.5
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "更新成功",
            "content": {
              "application/json": {
                "schema": {
                  "allOf": [
                    {"$ref": "#/components/schemas/SuccessResponse"},
                    {
                      "type": "object",
                      "properties": {
                        "data": {
                          "$ref": "#/components/schemas/Luggage"
                        }
                      }
                    }
                  ]
                }
              }
            }
          },
          "403": {
            "description": "权限不足",
            "content": {
              "application/json": {
                "schema": {"$ref": "#/components/schemas/ErrorResponse"},
                "example": {
                  "success": false,
                  "message": "没有权限"
                }
              }
            }
          },
          "400": {
            "description": "请求参数错误",
            "content": {
              "application/json": {
                "schema": {"$ref": "#/components/schemas/ErrorResponse"},
                "example": {
                  "success": false,
                  "message": "请提供行李ID"
                }
              }
            }
          }
        }
      }
    },
    "/employee/get/all": {
      "get": {
        "summary": "查询所有行李",
        "description": "获取所有状态为寄存中的行李记录（排除系统时间字段）。需要'查询行李'权限。",
        "tags": ["行李查询"],
        "security": [{"bearerAuth": []}],
        "responses": {
          "200": {
            "description": "查询成功",
            "content": {
              "application/json": {
                "schema": {
                  "allOf": [
                    {"$ref": "#/components/schemas/SuccessResponse"},
                    {
                      "type": "object",
                      "properties": {
                        "data": {
                          "type": "array",
                          "items": {"$ref": "#/components/schemas/Luggage"}
                        },
                        "count": {
                          "type": "integer",
                          "description": "记录数量",
                          "example": 25
                        }
                      }
                    }
                  ]
                }
              }
            }
          },
          "403": {
            "description": "权限不足",
            "content": {
              "application/json": {
                "schema": {"$ref": "#/components/schemas/ErrorResponse"},
                "example": {
                  "success": false,
                  "message": "没有权限"
                }
              }
            }
          }
        }
      }
    },
    "/employee/get/name": {
      "get": {
        "summary": "查询行李（按客户姓名）",
        "description": "根据客户姓名查询行李，返回该客户的所有行李（仅返回状态为寄存中的行李，排除系统时间字段）。需要'查询行李'权限。",
        "tags": ["行李查询"],
        "security": [{"bearerAuth": []}],
        "parameters": [
          {
            "name": "guest_name",
            "in": "query",
            "required": true,
            "description": "客户姓名",
            "schema": {
              "type": "string"
            },
            "example": "张三"
          }
        ],
        "responses": {
          "200": {
            "description": "查询成功",
            "content": {
              "application/json": {
                "schema": {
                  "allOf": [
                    {"$ref": "#/components/schemas/SuccessResponse"},
                    {
                      "type": "object",
                      "properties": {
                        "data": {
                          "type": "array",
                          "items": {"$ref": "#/components/schemas/Luggage"}
                        },
                        "count": {
                          "type": "integer",
                          "description": "记录数量",
                          "example": 2
                        }
                      }
                    }
                  ]
                }
              }
            }
          },
          "403": {
            "description": "权限不足",
            "content": {
              "application/json": {
                "schema": {"$ref": "#/components/schemas/ErrorResponse"},
                "example": {
                  "success": false,
                  "message": "没有权限"
                }
              }
            }
          }
        }
      }
    },
    "/employee/get/guest_id": {
      "get": {
        "summary": "查询行李（按客户ID）",
